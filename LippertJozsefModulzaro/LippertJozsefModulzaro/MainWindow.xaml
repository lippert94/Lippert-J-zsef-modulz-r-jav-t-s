<Window x:Class="LippertJozsefModulzaro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LippertJozsefModulzaro"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox SelectedItem="{Binding SelectLanguage}" ItemsSource="{Binding LanguageList}" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="240"/>
        <Button Content="Hozzáadás" HorizontalAlignment="Left" Margin="268,10,0,0" VerticalAlignment="Top" Width="239" Height="44" Click="NewLanguageClick"/>
        <Button Content="Szerkesztés" HorizontalAlignment="Left" Margin="268,59,0,0" VerticalAlignment="Top" Width="239" Height="42" Click="AmendmentClick"/>

    </Grid>
</Window>
